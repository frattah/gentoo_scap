<def-group><definition class="compliance" id="service_qpidd_disabled" version="1">
    <metadata>
        <title>Disable Apache Qpid (qpidd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The qpidd service should be disabled.</description>
    </metadata>
    <criteria comment="package qpid-cpp-server removed or service qpidd is not configured to start" operator="OR">
      <criterion comment="qpid-cpp-server removed" test_ref="service_qpidd_disabled_test_service_qpidd_package_qpid-cpp-server_removed" />
      
  
      <criteria operator="AND" comment="service qpidd is not configured to start">
        <criterion test_ref="test_service_not_running_service_qpidd_disabled_qpidd"
          comment="qpidd is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_qpidd_disabled_qpidd"
          comment="Property LoadState of service qpidd is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_qpidd_disabled_qpidd"
        check="all" check_existence="any_exist"
        comment="Test that the qpidd service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_qpidd_disabled_qpidd"/>
        <linux:state state_ref="state_service_not_running_service_qpidd_disabled_qpidd"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_qpidd_disabled_qpidd"
      comment="Retrieve the ActiveState property of qpidd" version="1">
      <linux:unit operation="pattern match">^qpidd\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_qpidd_disabled_qpidd"
      version="1" comment="qpidd is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_qpidd_disabled_qpidd"
      comment="Test that the property LoadState from the service qpidd is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_qpidd_disabled_qpidd"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_qpidd_disabled_qpidd"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of qpidd"
      version="1" id="obj_service_loadstate_is_masked_service_qpidd_disabled_qpidd">
      <linux:unit operation="pattern match">^qpidd\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_qpidd_disabled_qpidd"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_qpidd_disabled_test_service_qpidd_package_qpid-cpp-server_removed" version="1"
  comment="package qpid-cpp-server is removed">
    <linux:object object_ref="obj_service_qpidd_disabled_test_service_qpidd_package_qpid-cpp-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_qpidd_disabled_test_service_qpidd_package_qpid-cpp-server_removed" version="1">
    <linux:name>qpid-cpp-server</linux:name>
  </linux:rpminfo_object>


</def-group>