<def-group>
  <definition class="compliance" id="package_iptables-services_removed"
  version="1">
    <metadata>
        <title>Remove iptables-services Package</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The RPM package iptables-services should be removed.</description>
    </metadata>
    <criteria>
      <criterion comment="package iptables-services is removed"
      test_ref="test_package_iptables-services_removed" />
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_package_iptables-services_removed" version="1"
  comment="package iptables-services is removed">
    <linux:object object_ref="obj_test_package_iptables-services_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_package_iptables-services_removed" version="1">
    <linux:name>iptables-services</linux:name>
  </linux:rpminfo_object>

</def-group>