<def-group><definition class="compliance" id="service_mdmonitor_disabled" version="1">
    <metadata>
        <title>Disable Software RAID Monitor (mdmonitor)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The mdmonitor service should be disabled.</description>
    </metadata>
    <criteria comment="package mdadm removed or service mdmonitor is not configured to start" operator="OR">
      <criterion comment="mdadm removed" test_ref="service_mdmonitor_disabled_test_service_mdmonitor_package_mdadm_removed" />
      
  
      <criteria operator="AND" comment="service mdmonitor is not configured to start">
        <criterion test_ref="test_service_not_running_service_mdmonitor_disabled_mdmonitor"
          comment="mdmonitor is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor"
          comment="Property LoadState of service mdmonitor is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_mdmonitor_disabled_mdmonitor"
        check="all" check_existence="any_exist"
        comment="Test that the mdmonitor service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_mdmonitor_disabled_mdmonitor"/>
        <linux:state state_ref="state_service_not_running_service_mdmonitor_disabled_mdmonitor"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_mdmonitor_disabled_mdmonitor"
      comment="Retrieve the ActiveState property of mdmonitor" version="1">
      <linux:unit operation="pattern match">^mdmonitor\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_mdmonitor_disabled_mdmonitor"
      version="1" comment="mdmonitor is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor"
      comment="Test that the property LoadState from the service mdmonitor is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of mdmonitor"
      version="1" id="obj_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor">
      <linux:unit operation="pattern match">^mdmonitor\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_mdmonitor_disabled_mdmonitor"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_mdmonitor_disabled_test_service_mdmonitor_package_mdadm_removed" version="1"
  comment="package mdadm is removed">
    <linux:object object_ref="obj_service_mdmonitor_disabled_test_service_mdmonitor_package_mdadm_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_mdmonitor_disabled_test_service_mdmonitor_package_mdadm_removed" version="1">
    <linux:name>mdadm</linux:name>
  </linux:rpminfo_object>


</def-group>