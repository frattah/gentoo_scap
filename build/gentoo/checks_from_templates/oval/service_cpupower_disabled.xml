<def-group><definition class="compliance" id="service_cpupower_disabled" version="1">
    <metadata>
        <title>Disable CPU Speed (cpupower)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The cpupower service should be disabled.</description>
    </metadata>
    <criteria comment="package kernel-tools removed or service cpupower is not configured to start" operator="OR">
      <criterion comment="kernel-tools removed" test_ref="service_cpupower_disabled_test_service_cpupower_package_kernel-tools_removed" />
      
  
      <criteria operator="AND" comment="service cpupower is not configured to start">
        <criterion test_ref="test_service_not_running_service_cpupower_disabled_cpupower"
          comment="cpupower is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_cpupower_disabled_cpupower"
          comment="Property LoadState of service cpupower is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_cpupower_disabled_cpupower"
        check="all" check_existence="any_exist"
        comment="Test that the cpupower service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_cpupower_disabled_cpupower"/>
        <linux:state state_ref="state_service_not_running_service_cpupower_disabled_cpupower"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_cpupower_disabled_cpupower"
      comment="Retrieve the ActiveState property of cpupower" version="1">
      <linux:unit operation="pattern match">^cpupower\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_cpupower_disabled_cpupower"
      version="1" comment="cpupower is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_cpupower_disabled_cpupower"
      comment="Test that the property LoadState from the service cpupower is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_cpupower_disabled_cpupower"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_cpupower_disabled_cpupower"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of cpupower"
      version="1" id="obj_service_loadstate_is_masked_service_cpupower_disabled_cpupower">
      <linux:unit operation="pattern match">^cpupower\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_cpupower_disabled_cpupower"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_cpupower_disabled_test_service_cpupower_package_kernel-tools_removed" version="1"
  comment="package kernel-tools is removed">
    <linux:object object_ref="obj_service_cpupower_disabled_test_service_cpupower_package_kernel-tools_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_cpupower_disabled_test_service_cpupower_package_kernel-tools_removed" version="1">
    <linux:name>kernel-tools</linux:name>
  </linux:rpminfo_object>


</def-group>