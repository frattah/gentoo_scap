<def-group><definition class="compliance" id="service_abrtd_disabled" version="1">
    <metadata>
        <title>Disable Automatic Bug Reporting Tool (abrtd)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The abrtd service should be disabled.</description>
    </metadata>
    <criteria comment="package abrt removed or service abrtd is not configured to start" operator="OR">
      <criterion comment="abrt removed" test_ref="service_abrtd_disabled_test_service_abrtd_package_abrt_removed" />
      
  
      <criteria operator="AND" comment="service abrtd is not configured to start">
        <criterion test_ref="test_service_not_running_service_abrtd_disabled_abrtd"
          comment="abrtd is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_abrtd_disabled_abrtd"
          comment="Property LoadState of service abrtd is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_abrtd_disabled_abrtd"
        check="all" check_existence="any_exist"
        comment="Test that the abrtd service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_abrtd_disabled_abrtd"/>
        <linux:state state_ref="state_service_not_running_service_abrtd_disabled_abrtd"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_abrtd_disabled_abrtd"
      comment="Retrieve the ActiveState property of abrtd" version="1">
      <linux:unit operation="pattern match">^abrtd\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_abrtd_disabled_abrtd"
      version="1" comment="abrtd is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_abrtd_disabled_abrtd"
      comment="Test that the property LoadState from the service abrtd is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_abrtd_disabled_abrtd"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_abrtd_disabled_abrtd"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of abrtd"
      version="1" id="obj_service_loadstate_is_masked_service_abrtd_disabled_abrtd">
      <linux:unit operation="pattern match">^abrtd\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_abrtd_disabled_abrtd"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_abrtd_disabled_test_service_abrtd_package_abrt_removed" version="1"
  comment="package abrt is removed">
    <linux:object object_ref="obj_service_abrtd_disabled_test_service_abrtd_package_abrt_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_abrtd_disabled_test_service_abrtd_package_abrt_removed" version="1">
    <linux:name>abrt</linux:name>
  </linux:rpminfo_object>


</def-group>