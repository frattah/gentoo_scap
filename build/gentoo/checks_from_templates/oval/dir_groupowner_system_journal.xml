<def-group>
  <definition class="compliance" id="dir_groupowner_system_journal" version="1">
   
      <metadata>
        <title>Verify group-owner of system journal directories</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>This test makes sure that /run/log/journal/, /var/log/journal/ is group owned by systemd-journal.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /run/log/journal/" test_ref="test_file_groupownerdir_groupowner_system_journal_0" />
    
      <criterion comment="Check file group ownership of /var/log/journal/" test_ref="test_file_groupownerdir_groupowner_system_journal_1" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /run/log/journal/" id="test_file_groupownerdir_groupowner_system_journal_0" version="1">
    <unix:object object_ref="object_file_groupownerdir_groupowner_system_journal_0" />
  </unix:file_test>

  <unix:file_object comment="/run/log/journal/" id="object_file_groupownerdir_groupowner_system_journal_0" version="1">
      <unix:behaviors recurse="directories" recurse_direction="down" max_depth="-1" recurse_file_system="local" />
      <unix:path>/run/log/journal</unix:path>
      <unix:filename xsi:nil="true" />
    <filter action="exclude">symlink_file_groupownerdir_groupowner_system_journal_uid_systemd-journal</filter>
    <filter action="exclude">state_file_groupownerdir_groupowner_system_journal_gid_systemd-journal_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupownerdir_groupowner_system_journal_gid_systemd-journal_0" version="1">
    <unix:group_id datatype="int" var_ref="var_dedicated_groupownerdir_groupowner_system_journal_uid_systemd-journal"></unix:group_id>
  </unix:file_state>
  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /var/log/journal/" id="test_file_groupownerdir_groupowner_system_journal_1" version="1">
    <unix:object object_ref="object_file_groupownerdir_groupowner_system_journal_1" />
  </unix:file_test>

  <unix:file_object comment="/var/log/journal/" id="object_file_groupownerdir_groupowner_system_journal_1" version="1">
      <unix:behaviors recurse="directories" recurse_direction="down" max_depth="-1" recurse_file_system="local" />
      <unix:path>/var/log/journal</unix:path>
      <unix:filename xsi:nil="true" />
    <filter action="exclude">symlink_file_groupownerdir_groupowner_system_journal_uid_systemd-journal</filter>
    <filter action="exclude">state_file_groupownerdir_groupowner_system_journal_gid_systemd-journal_1</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupownerdir_groupowner_system_journal_gid_systemd-journal_1" version="1">
    <unix:group_id datatype="int" var_ref="var_dedicated_groupownerdir_groupowner_system_journal_uid_systemd-journal"></unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupownerdir_groupowner_system_journal_uid_systemd-journal" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
  <ind:textfilecontent54_object id="obj_dedicated_groupownerdir_groupowner_system_journal_uid_systemd-journal" version="1" comment="gid of the dedicated systemd-journal group">
    <ind:filepath>/etc/group</ind:filepath>
    <ind:pattern operation="pattern match">^systemd-journal:\w+:(\w+):.*</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>

  <!-- variable storing count of all group names - including duplicates -->
  <local_variable id="var_dedicated_groupownerdir_groupowner_system_journal_uid_systemd-journal" datatype="int" version="1"
                  comment="Count of all group names (including duplicates if any)">
          <object_component item_field="subexpression" object_ref="obj_dedicated_groupownerdir_groupowner_system_journal_uid_systemd-journal"/>
  </local_variable>
</def-group>