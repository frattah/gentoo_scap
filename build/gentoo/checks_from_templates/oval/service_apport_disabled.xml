<def-group><definition class="compliance" id="service_apport_disabled" version="1">
    <metadata>
        <title>Disable Apport Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The apport service should be disabled.</description>
    </metadata>
    <criteria comment="package apport removed or service apport is not configured to start" operator="OR">
      <criterion comment="apport removed" test_ref="service_apport_disabled_test_service_apport_package_apport_removed" />
      
  
      <criteria operator="AND" comment="service apport is not configured to start">
        <criterion test_ref="test_service_not_running_service_apport_disabled_apport"
          comment="apport is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_apport_disabled_apport"
          comment="Property LoadState of service apport is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_apport_disabled_apport"
        check="all" check_existence="any_exist"
        comment="Test that the apport service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_apport_disabled_apport"/>
        <linux:state state_ref="state_service_not_running_service_apport_disabled_apport"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_apport_disabled_apport"
      comment="Retrieve the ActiveState property of apport" version="1">
      <linux:unit operation="pattern match">^apport\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_apport_disabled_apport"
      version="1" comment="apport is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_apport_disabled_apport"
      comment="Test that the property LoadState from the service apport is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_apport_disabled_apport"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_apport_disabled_apport"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of apport"
      version="1" id="obj_service_loadstate_is_masked_service_apport_disabled_apport">
      <linux:unit operation="pattern match">^apport\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_apport_disabled_apport"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_apport_disabled_test_service_apport_package_apport_removed" version="1"
  comment="package apport is removed">
    <linux:object object_ref="obj_service_apport_disabled_test_service_apport_package_apport_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_apport_disabled_test_service_apport_package_apport_removed" version="1">
    <linux:name>apport</linux:name>
  </linux:rpminfo_object>


</def-group>