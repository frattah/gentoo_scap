<def-group><definition class="compliance" id="service_squid_disabled" version="1">
    <metadata>
        <title>Disable Squid</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The squid service should be disabled.</description>
    </metadata>
    <criteria comment="package squid removed or service squid is not configured to start" operator="OR">
      <criterion comment="squid removed" test_ref="service_squid_disabled_test_service_squid_package_squid_removed" />
      
  
      <criteria operator="AND" comment="service squid is not configured to start">
        <criterion test_ref="test_service_not_running_service_squid_disabled_squid"
          comment="squid is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_squid_disabled_squid"
          comment="Property LoadState of service squid is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_squid_disabled_squid"
        check="all" check_existence="any_exist"
        comment="Test that the squid service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_squid_disabled_squid"/>
        <linux:state state_ref="state_service_not_running_service_squid_disabled_squid"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_squid_disabled_squid"
      comment="Retrieve the ActiveState property of squid" version="1">
      <linux:unit operation="pattern match">^squid\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_squid_disabled_squid"
      version="1" comment="squid is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_squid_disabled_squid"
      comment="Test that the property LoadState from the service squid is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_squid_disabled_squid"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_squid_disabled_squid"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of squid"
      version="1" id="obj_service_loadstate_is_masked_service_squid_disabled_squid">
      <linux:unit operation="pattern match">^squid\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_squid_disabled_squid"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_squid_disabled_test_service_squid_package_squid_removed" version="1"
  comment="package squid is removed">
    <linux:object object_ref="obj_service_squid_disabled_test_service_squid_package_squid_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_squid_disabled_test_service_squid_package_squid_removed" version="1">
    <linux:name>squid</linux:name>
  </linux:rpminfo_object>


</def-group>