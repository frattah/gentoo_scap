<def-group>
  <definition class="compliance" id="audit_rules_networkconfig_modification_network_scripts" version="1">
    <metadata>
        <title>Record Events that Modify the System's Network Environment</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>Check if actions on '/etc/sysconfig/network-scripts' are configured to be audited</description>
    </metadata>

    <criteria operator="OR">
      <criteria operator="AND">
        <!-- Test the augenrules case -->
        <extend_definition comment="audit augenrules" definition_ref="audit_rules_augenrules" />
        <criterion comment="audit /etc/sysconfig/network-scripts augenrules" test_ref="test_audit_rules_networkconfig_modification_network_scripts_augenrules" />
      </criteria>
      <criteria operator="AND">
        <!-- Test the auditctl case -->
        <extend_definition comment="audit auditctl" definition_ref="audit_rules_auditctl" />
        <criterion comment="audit /etc/sysconfig/network-scripts auditctl" test_ref="test_audit_rules_networkconfig_modification_network_scripts_auditctl" />
      </criteria>
    </criteria>

  </definition>

  <ind:textfilecontent54_test check="all" comment="audit /etc/sysconfig/network-scripts augenrules" id="test_audit_rules_networkconfig_modification_network_scripts_augenrules" version="1">
    <ind:object object_ref="object_audit_rules_networkconfig_modification_network_scripts_augenrules" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_audit_rules_networkconfig_modification_network_scripts_augenrules" version="1">
    <ind:filepath operation="pattern match">^/etc/audit/rules\.d/.*\.rules$</ind:filepath>
    <ind:pattern operation="pattern match">^\-w[\s]+/etc/sysconfig/network-scripts[\s]+\-p[\s]+\b([rx]*w[rx]*a[rx]*|[rx]*a[rx]*w[rx]*)\b.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="audit /etc/sysconfig/network-scripts auditctl" id="test_audit_rules_networkconfig_modification_network_scripts_auditctl" version="1">
    <ind:object object_ref="object_audit_rules_networkconfig_modification_network_scripts_auditctl" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_audit_rules_networkconfig_modification_network_scripts_auditctl" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^\-w[\s]+/etc/sysconfig/network-scripts[\s]+\-p[\s]+\b([rx]*w[rx]*a[rx]*|[rx]*a[rx]*w[rx]*)\b.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>