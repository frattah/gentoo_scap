<def-group><definition class="compliance" id="service_netfs_disabled" version="1">
    <metadata>
        <title>Disable Network File Systems (netfs)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The netfs service should be disabled.</description>
    </metadata>
    <criteria comment="package netfs removed or service netfs is not configured to start" operator="OR">
      <criterion comment="netfs removed" test_ref="service_netfs_disabled_test_service_netfs_package_netfs_removed" />
      
  
      <criteria operator="AND" comment="service netfs is not configured to start">
        <criterion test_ref="test_service_not_running_service_netfs_disabled_netfs"
          comment="netfs is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_netfs_disabled_netfs"
          comment="Property LoadState of service netfs is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_netfs_disabled_netfs"
        check="all" check_existence="any_exist"
        comment="Test that the netfs service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_netfs_disabled_netfs"/>
        <linux:state state_ref="state_service_not_running_service_netfs_disabled_netfs"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_netfs_disabled_netfs"
      comment="Retrieve the ActiveState property of netfs" version="1">
      <linux:unit operation="pattern match">^netfs\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_netfs_disabled_netfs"
      version="1" comment="netfs is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_netfs_disabled_netfs"
      comment="Test that the property LoadState from the service netfs is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_netfs_disabled_netfs"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_netfs_disabled_netfs"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of netfs"
      version="1" id="obj_service_loadstate_is_masked_service_netfs_disabled_netfs">
      <linux:unit operation="pattern match">^netfs\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_netfs_disabled_netfs"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_netfs_disabled_test_service_netfs_package_netfs_removed" version="1"
  comment="package netfs is removed">
    <linux:object object_ref="obj_service_netfs_disabled_test_service_netfs_package_netfs_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_netfs_disabled_test_service_netfs_package_netfs_removed" version="1">
    <linux:name>netfs</linux:name>
  </linux:rpminfo_object>


</def-group>