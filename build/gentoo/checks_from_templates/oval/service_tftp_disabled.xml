<def-group><definition class="compliance" id="service_tftp_disabled" version="1">
    <metadata>
        <title>Disable tftp Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The tftp service should be disabled.</description>
    </metadata>
    <criteria comment="package tftp-server removed or service tftp is not configured to start" operator="OR">
      <criterion comment="tftp-server removed" test_ref="service_tftp_disabled_test_service_tftp_package_tftp-server_removed" />
      
  
      <criteria operator="AND" comment="service tftp is not configured to start">
        <criterion test_ref="test_service_not_running_service_tftp_disabled_tftp"
          comment="tftp is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_tftp_disabled_tftp"
          comment="Property LoadState of service tftp is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_tftp_disabled_tftp"
        check="all" check_existence="any_exist"
        comment="Test that the tftp service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_tftp_disabled_tftp"/>
        <linux:state state_ref="state_service_not_running_service_tftp_disabled_tftp"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_tftp_disabled_tftp"
      comment="Retrieve the ActiveState property of tftp" version="1">
      <linux:unit operation="pattern match">^tftp\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_tftp_disabled_tftp"
      version="1" comment="tftp is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_tftp_disabled_tftp"
      comment="Test that the property LoadState from the service tftp is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_tftp_disabled_tftp"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_tftp_disabled_tftp"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of tftp"
      version="1" id="obj_service_loadstate_is_masked_service_tftp_disabled_tftp">
      <linux:unit operation="pattern match">^tftp\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_tftp_disabled_tftp"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_tftp_disabled_test_service_tftp_package_tftp-server_removed" version="1"
  comment="package tftp-server is removed">
    <linux:object object_ref="obj_service_tftp_disabled_test_service_tftp_package_tftp-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_tftp_disabled_test_service_tftp_package_tftp-server_removed" version="1">
    <linux:name>tftp-server</linux:name>
  </linux:rpminfo_object>


</def-group>