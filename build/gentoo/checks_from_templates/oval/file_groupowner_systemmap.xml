<def-group>
  <definition class="compliance" id="file_groupowner_systemmap" version="1">
   
      <metadata>
        <title>Verify Group Who Owns System.map Files</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>This test makes sure that /boot/ is group owned by root.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /boot/" test_ref="test_file_groupowner_systemmap_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /boot/" id="test_file_groupowner_systemmap_0" version="1">
    <unix:object object_ref="object_file_groupowner_systemmap_0" />
  </unix:file_test>

  <unix:file_object comment="/boot/" id="object_file_groupowner_systemmap_0" version="1">
      <unix:path>/boot</unix:path>
      <unix:filename operation="pattern match">^.*System\.map.*$</unix:filename>
    <filter action="exclude">symlink_file_groupowner_systemmap_uid_root</filter>
    <filter action="exclude">state_file_groupowner_systemmap_gid_root_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupowner_systemmap_gid_root_0" version="1">
    <unix:group_id datatype="int" var_ref="var_dedicated_groupowner_systemmap_uid_root"></unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupowner_systemmap_uid_root" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
  <ind:textfilecontent54_object id="obj_dedicated_groupowner_systemmap_uid_root" version="1" comment="gid of the dedicated root group">
    <ind:filepath>/etc/group</ind:filepath>
    <ind:pattern operation="pattern match">^root:\w+:(\w+):.*</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>

  <!-- variable storing count of all group names - including duplicates -->
  <local_variable id="var_dedicated_groupowner_systemmap_uid_root" datatype="int" version="1"
                  comment="Count of all group names (including duplicates if any)">
          <object_component item_field="subexpression" object_ref="obj_dedicated_groupowner_systemmap_uid_root"/>
  </local_variable>
</def-group>