<def-group><definition class="compliance" id="service_zebra_disabled" version="1">
    <metadata>
        <title>Disable Quagga Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The zebra service should be disabled.</description>
    </metadata>
    <criteria comment="package quagga removed or service zebra is not configured to start" operator="OR">
      <criterion comment="quagga removed" test_ref="service_zebra_disabled_test_service_zebra_package_quagga_removed" />
      
  
      <criteria operator="AND" comment="service zebra is not configured to start">
        <criterion test_ref="test_service_not_running_service_zebra_disabled_zebra"
          comment="zebra is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_zebra_disabled_zebra"
          comment="Property LoadState of service zebra is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_zebra_disabled_zebra"
        check="all" check_existence="any_exist"
        comment="Test that the zebra service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_zebra_disabled_zebra"/>
        <linux:state state_ref="state_service_not_running_service_zebra_disabled_zebra"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_zebra_disabled_zebra"
      comment="Retrieve the ActiveState property of zebra" version="1">
      <linux:unit operation="pattern match">^zebra\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_zebra_disabled_zebra"
      version="1" comment="zebra is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_zebra_disabled_zebra"
      comment="Test that the property LoadState from the service zebra is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_zebra_disabled_zebra"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_zebra_disabled_zebra"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of zebra"
      version="1" id="obj_service_loadstate_is_masked_service_zebra_disabled_zebra">
      <linux:unit operation="pattern match">^zebra\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_zebra_disabled_zebra"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_zebra_disabled_test_service_zebra_package_quagga_removed" version="1"
  comment="package quagga is removed">
    <linux:object object_ref="obj_service_zebra_disabled_test_service_zebra_package_quagga_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_zebra_disabled_test_service_zebra_package_quagga_removed" version="1">
    <linux:name>quagga</linux:name>
  </linux:rpminfo_object>


</def-group>