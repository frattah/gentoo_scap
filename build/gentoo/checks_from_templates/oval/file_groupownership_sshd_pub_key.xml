<def-group>
  <definition class="compliance" id="file_groupownership_sshd_pub_key" version="1">
   
      <metadata>
        <title>Verify Group Ownership on SSH Server Public *.pub Key Files</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>This test makes sure that /etc/ssh/ is group owned by 0.</description>
    </metadata>
      <criteria>
    
      <criterion comment="Check file group ownership of /etc/ssh/" test_ref="test_file_groupownership_sshd_pub_key_0" />
    
   
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing group ownership of /etc/ssh/" id="test_file_groupownership_sshd_pub_key_0" version="1">
    <unix:object object_ref="object_file_groupownership_sshd_pub_key_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/ssh/" id="object_file_groupownership_sshd_pub_key_0" version="1">
      <unix:path>/etc/ssh</unix:path>
      <unix:filename operation="pattern match">^.*\.pub$</unix:filename>
    <filter action="exclude">symlink_file_groupownership_sshd_pub_key_uid_0</filter>
    <filter action="exclude">state_file_groupownership_sshd_pub_key_gid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_groupownership_sshd_pub_key_gid_0_0" version="1">
    <unix:group_id datatype="int">0</unix:group_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_groupownership_sshd_pub_key_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>