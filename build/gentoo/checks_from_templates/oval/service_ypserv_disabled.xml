<def-group><definition class="compliance" id="service_ypserv_disabled" version="1">
    <metadata>
        <title>Disable ypserv Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The ypserv service should be disabled.</description>
    </metadata>
    <criteria comment="package ypserv removed or service ypserv is not configured to start" operator="OR">
      <criterion comment="ypserv removed" test_ref="service_ypserv_disabled_test_service_ypserv_package_ypserv_removed" />
      
  
      <criteria operator="AND" comment="service ypserv is not configured to start">
        <criterion test_ref="test_service_not_running_service_ypserv_disabled_ypserv"
          comment="ypserv is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_ypserv_disabled_ypserv"
          comment="Property LoadState of service ypserv is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_ypserv_disabled_ypserv"
        check="all" check_existence="any_exist"
        comment="Test that the ypserv service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_ypserv_disabled_ypserv"/>
        <linux:state state_ref="state_service_not_running_service_ypserv_disabled_ypserv"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_ypserv_disabled_ypserv"
      comment="Retrieve the ActiveState property of ypserv" version="1">
      <linux:unit operation="pattern match">^ypserv\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_ypserv_disabled_ypserv"
      version="1" comment="ypserv is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_ypserv_disabled_ypserv"
      comment="Test that the property LoadState from the service ypserv is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_ypserv_disabled_ypserv"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_ypserv_disabled_ypserv"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of ypserv"
      version="1" id="obj_service_loadstate_is_masked_service_ypserv_disabled_ypserv">
      <linux:unit operation="pattern match">^ypserv\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_ypserv_disabled_ypserv"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_ypserv_disabled_test_service_ypserv_package_ypserv_removed" version="1"
  comment="package ypserv is removed">
    <linux:object object_ref="obj_service_ypserv_disabled_test_service_ypserv_package_ypserv_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_ypserv_disabled_test_service_ypserv_package_ypserv_removed" version="1">
    <linux:name>ypserv</linux:name>
  </linux:rpminfo_object>


</def-group>