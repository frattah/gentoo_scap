<def-group><definition class="compliance" id="service_httpd_disabled" version="1">
    <metadata>
        <title>Disable httpd Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The httpd service should be disabled.</description>
    </metadata>
    <criteria comment="package httpd removed or service httpd is not configured to start" operator="OR">
      <criterion comment="httpd removed" test_ref="service_httpd_disabled_test_service_httpd_package_httpd_removed" />
      
  
      <criteria operator="AND" comment="service httpd is not configured to start">
        <criterion test_ref="test_service_not_running_service_httpd_disabled_httpd"
          comment="httpd is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_httpd_disabled_httpd"
          comment="Property LoadState of service httpd is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_httpd_disabled_httpd"
        check="all" check_existence="any_exist"
        comment="Test that the httpd service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_httpd_disabled_httpd"/>
        <linux:state state_ref="state_service_not_running_service_httpd_disabled_httpd"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_httpd_disabled_httpd"
      comment="Retrieve the ActiveState property of httpd" version="1">
      <linux:unit operation="pattern match">^httpd\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_httpd_disabled_httpd"
      version="1" comment="httpd is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_httpd_disabled_httpd"
      comment="Test that the property LoadState from the service httpd is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_httpd_disabled_httpd"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_httpd_disabled_httpd"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of httpd"
      version="1" id="obj_service_loadstate_is_masked_service_httpd_disabled_httpd">
      <linux:unit operation="pattern match">^httpd\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_httpd_disabled_httpd"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_httpd_disabled_test_service_httpd_package_httpd_removed" version="1"
  comment="package httpd is removed">
    <linux:object object_ref="obj_service_httpd_disabled_test_service_httpd_package_httpd_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_httpd_disabled_test_service_httpd_package_httpd_removed" version="1">
    <linux:name>httpd</linux:name>
  </linux:rpminfo_object>


</def-group>