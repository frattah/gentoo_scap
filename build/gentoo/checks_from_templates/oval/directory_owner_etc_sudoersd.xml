<def-group>
  <definition class="compliance" id="directory_owner_etc_sudoersd" version="1">
  
    <metadata>
        <title>Verify User Who Owns /etc/sudoers.d Directory</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>This test makes sure that /etc/sudoers.d/ is owned by 0.</description>
    </metadata>
     <criteria>
   
     <criterion comment="Check file ownership of /etc/sudoers.d/" test_ref="test_file_ownerdirectory_owner_etc_sudoersd_0" />
   
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing user ownership of /etc/sudoers.d/" id="test_file_ownerdirectory_owner_etc_sudoersd_0" version="1">
    <unix:object object_ref="object_file_ownerdirectory_owner_etc_sudoersd_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/sudoers.d/" id="object_file_ownerdirectory_owner_etc_sudoersd_0" version="1">
      <unix:path>/etc/sudoers.d</unix:path>
      <unix:filename xsi:nil="true" />
    <filter action="exclude">symlink_file_ownerdirectory_owner_etc_sudoersd_uid_0</filter>
    <filter action="exclude">state_file_ownerdirectory_owner_etc_sudoersd_uid_0_0</filter>
  </unix:file_object>

  <unix:file_state id="state_file_ownerdirectory_owner_etc_sudoersd_uid_0_0" version="1">
    <unix:user_id datatype="int">0</unix:user_id>
  </unix:file_state>
  

  <unix:file_state id="symlink_file_ownerdirectory_owner_etc_sudoersd_uid_0" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>