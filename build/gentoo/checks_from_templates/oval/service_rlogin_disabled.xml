<def-group><definition class="compliance" id="service_rlogin_disabled" version="1">
    <metadata>
        <title>Disable rlogin Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rlogin service should be disabled.</description>
    </metadata>
    <criteria comment="package rsh-server removed or service rlogin is not configured to start" operator="OR">
      <criterion comment="rsh-server removed" test_ref="service_rlogin_disabled_test_service_rlogin_package_rsh-server_removed" />
      
  
      <criteria operator="AND" comment="service rlogin is not configured to start">
        <criterion test_ref="test_service_not_running_service_rlogin_disabled_rlogin"
          comment="rlogin is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_rlogin_disabled_rlogin"
          comment="Property LoadState of service rlogin is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_rlogin_disabled_rlogin"
        check="all" check_existence="any_exist"
        comment="Test that the rlogin service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_rlogin_disabled_rlogin"/>
        <linux:state state_ref="state_service_not_running_service_rlogin_disabled_rlogin"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_rlogin_disabled_rlogin"
      comment="Retrieve the ActiveState property of rlogin" version="1">
      <linux:unit operation="pattern match">^rlogin\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_rlogin_disabled_rlogin"
      version="1" comment="rlogin is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_rlogin_disabled_rlogin"
      comment="Test that the property LoadState from the service rlogin is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_rlogin_disabled_rlogin"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_rlogin_disabled_rlogin"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of rlogin"
      version="1" id="obj_service_loadstate_is_masked_service_rlogin_disabled_rlogin">
      <linux:unit operation="pattern match">^rlogin\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_rlogin_disabled_rlogin"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_rlogin_disabled_test_service_rlogin_package_rsh-server_removed" version="1"
  comment="package rsh-server is removed">
    <linux:object object_ref="obj_service_rlogin_disabled_test_service_rlogin_package_rsh-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_rlogin_disabled_test_service_rlogin_package_rsh-server_removed" version="1">
    <linux:name>rsh-server</linux:name>
  </linux:rpminfo_object>


</def-group>