<def-group><definition class="compliance" id="service_telnet_disabled" version="1">
    <metadata>
        <title>Disable telnet Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The telnet service should be disabled.</description>
    </metadata>
    <criteria comment="package telnet-server removed or service telnet is not configured to start" operator="OR">
      <criterion comment="telnet-server removed" test_ref="service_telnet_disabled_test_service_telnet_package_telnet-server_removed" />
      
  
      <criteria operator="AND" comment="service telnet is not configured to start">
        <criterion test_ref="test_service_not_running_service_telnet_disabled_telnet"
          comment="telnet is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_telnet_disabled_telnet"
          comment="Property LoadState of service telnet is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_telnet_disabled_telnet"
        check="all" check_existence="any_exist"
        comment="Test that the telnet service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_telnet_disabled_telnet"/>
        <linux:state state_ref="state_service_not_running_service_telnet_disabled_telnet"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_telnet_disabled_telnet"
      comment="Retrieve the ActiveState property of telnet" version="1">
      <linux:unit operation="pattern match">^telnet\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_telnet_disabled_telnet"
      version="1" comment="telnet is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_telnet_disabled_telnet"
      comment="Test that the property LoadState from the service telnet is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_telnet_disabled_telnet"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_telnet_disabled_telnet"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of telnet"
      version="1" id="obj_service_loadstate_is_masked_service_telnet_disabled_telnet">
      <linux:unit operation="pattern match">^telnet\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_telnet_disabled_telnet"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_telnet_disabled_test_service_telnet_package_telnet-server_removed" version="1"
  comment="package telnet-server is removed">
    <linux:object object_ref="obj_service_telnet_disabled_test_service_telnet_package_telnet-server_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_telnet_disabled_test_service_telnet_package_telnet-server_removed" version="1">
    <linux:name>telnet-server</linux:name>
  </linux:rpminfo_object>


</def-group>