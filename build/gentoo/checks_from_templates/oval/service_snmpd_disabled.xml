<def-group><definition class="compliance" id="service_snmpd_disabled" version="1">
    <metadata>
        <title>Disable snmpd Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The snmpd service should be disabled.</description>
    </metadata>
    <criteria comment="package net-snmp removed or service snmpd is not configured to start" operator="OR">
      <criterion comment="net-snmp removed" test_ref="service_snmpd_disabled_test_service_snmpd_package_net-snmp_removed" />
      
  
      <criteria operator="AND" comment="service snmpd is not configured to start">
        <criterion test_ref="test_service_not_running_service_snmpd_disabled_snmpd"
          comment="snmpd is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_snmpd_disabled_snmpd"
          comment="Property LoadState of service snmpd is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_snmpd_disabled_snmpd"
        check="all" check_existence="any_exist"
        comment="Test that the snmpd service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_snmpd_disabled_snmpd"/>
        <linux:state state_ref="state_service_not_running_service_snmpd_disabled_snmpd"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_snmpd_disabled_snmpd"
      comment="Retrieve the ActiveState property of snmpd" version="1">
      <linux:unit operation="pattern match">^snmpd\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_snmpd_disabled_snmpd"
      version="1" comment="snmpd is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_snmpd_disabled_snmpd"
      comment="Test that the property LoadState from the service snmpd is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_snmpd_disabled_snmpd"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_snmpd_disabled_snmpd"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of snmpd"
      version="1" id="obj_service_loadstate_is_masked_service_snmpd_disabled_snmpd">
      <linux:unit operation="pattern match">^snmpd\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_snmpd_disabled_snmpd"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_snmpd_disabled_test_service_snmpd_package_net-snmp_removed" version="1"
  comment="package net-snmp is removed">
    <linux:object object_ref="obj_service_snmpd_disabled_test_service_snmpd_package_net-snmp_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_snmpd_disabled_test_service_snmpd_package_net-snmp_removed" version="1">
    <linux:name>net-snmp</linux:name>
  </linux:rpminfo_object>


</def-group>