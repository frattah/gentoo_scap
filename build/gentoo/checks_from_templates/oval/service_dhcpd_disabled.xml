<def-group><definition class="compliance" id="service_dhcpd_disabled" version="1">
    <metadata>
        <title>Disable DHCP Service</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The dhcpd service should be disabled.</description>
    </metadata>
    <criteria comment="package dhcp removed or service dhcpd is not configured to start" operator="OR">
      <criterion comment="dhcp removed" test_ref="service_dhcpd_disabled_test_service_dhcpd_package_dhcp_removed" />
      
  
      <criteria operator="AND" comment="service dhcpd is not configured to start">
        <criterion test_ref="test_service_not_running_service_dhcpd_disabled_dhcpd"
          comment="dhcpd is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd"
          comment="Property LoadState of service dhcpd is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_dhcpd_disabled_dhcpd"
        check="all" check_existence="any_exist"
        comment="Test that the dhcpd service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_dhcpd_disabled_dhcpd"/>
        <linux:state state_ref="state_service_not_running_service_dhcpd_disabled_dhcpd"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_dhcpd_disabled_dhcpd"
      comment="Retrieve the ActiveState property of dhcpd" version="1">
      <linux:unit operation="pattern match">^dhcpd\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_dhcpd_disabled_dhcpd"
      version="1" comment="dhcpd is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd"
      comment="Test that the property LoadState from the service dhcpd is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of dhcpd"
      version="1" id="obj_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd">
      <linux:unit operation="pattern match">^dhcpd\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_dhcpd_disabled_dhcpd"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_dhcpd_disabled_test_service_dhcpd_package_dhcp_removed" version="1"
  comment="package dhcp is removed">
    <linux:object object_ref="obj_service_dhcpd_disabled_test_service_dhcpd_package_dhcp_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_dhcpd_disabled_test_service_dhcpd_package_dhcp_removed" version="1">
    <linux:name>dhcp</linux:name>
  </linux:rpminfo_object>


</def-group>