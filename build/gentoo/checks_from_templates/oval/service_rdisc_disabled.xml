<def-group><definition class="compliance" id="service_rdisc_disabled" version="1">
    <metadata>
        <title>Disable Network Router Discovery Daemon (rdisc)</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The rdisc service should be disabled.</description>
    </metadata>
    <criteria comment="package iputils removed or service rdisc is not configured to start" operator="OR">
      <criterion comment="iputils removed" test_ref="service_rdisc_disabled_test_service_rdisc_package_iputils_removed" />
      
  
      <criteria operator="AND" comment="service rdisc is not configured to start">
        <criterion test_ref="test_service_not_running_service_rdisc_disabled_rdisc"
          comment="rdisc is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_rdisc_disabled_rdisc"
          comment="Property LoadState of service rdisc is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_rdisc_disabled_rdisc"
        check="all" check_existence="any_exist"
        comment="Test that the rdisc service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_rdisc_disabled_rdisc"/>
        <linux:state state_ref="state_service_not_running_service_rdisc_disabled_rdisc"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_rdisc_disabled_rdisc"
      comment="Retrieve the ActiveState property of rdisc" version="1">
      <linux:unit operation="pattern match">^rdisc\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_rdisc_disabled_rdisc"
      version="1" comment="rdisc is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_rdisc_disabled_rdisc"
      comment="Test that the property LoadState from the service rdisc is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_rdisc_disabled_rdisc"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_rdisc_disabled_rdisc"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of rdisc"
      version="1" id="obj_service_loadstate_is_masked_service_rdisc_disabled_rdisc">
      <linux:unit operation="pattern match">^rdisc\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_rdisc_disabled_rdisc"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_rdisc_disabled_test_service_rdisc_package_iputils_removed" version="1"
  comment="package iputils is removed">
    <linux:object object_ref="obj_service_rdisc_disabled_test_service_rdisc_package_iputils_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_rdisc_disabled_test_service_rdisc_package_iputils_removed" version="1">
    <linux:name>iputils</linux:name>
  </linux:rpminfo_object>


</def-group>