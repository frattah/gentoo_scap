<def-group>
  <definition class="compliance" id="directory_permissions_etc_sysctld" version="1">
  
    <metadata>
        <title>Verify Permissions On /etc/sysctl.d Directory</title>
        
    <affected family="unix">
    <platform>Gentoo</platform>
    </affected>
        <description>This test makes sure that /etc/sysctl.d/ has mode 0755.
      If the target file or directory has an extended ACL, then it will fail the mode check.
      </description>
    </metadata>
    <criteria>
  
      <criterion comment="Check file mode of /etc/sysctl.d/" test_ref="test_file_permissionsdirectory_permissions_etc_sysctld_0"/>
  
  
    </criteria>
  </definition>

  
  <unix:file_test check="all" check_existence="none_exist" comment="Testing mode of /etc/sysctl.d/" id="test_file_permissionsdirectory_permissions_etc_sysctld_0" version="3">
    <unix:object object_ref="object_file_permissionsdirectory_permissions_etc_sysctld_0" />
  </unix:file_test>

  <unix:file_object comment="/etc/sysctl.d/" id="object_file_permissionsdirectory_permissions_etc_sysctld_0" version="1">
      <unix:path>/etc/sysctl.d</unix:path>
      <unix:filename xsi:nil="true" />
      <filter action="exclude">exclude_symlinks_directory_permissions_etc_sysctld</filter>
      <filter action="exclude">state_file_permissionsdirectory_permissions_etc_sysctld_0_mode_0755or_stricter_</filter>
  </unix:file_object>

  <unix:file_state id="state_file_permissionsdirectory_permissions_etc_sysctld_0_mode_0755or_stricter_" operator="AND" version="3">
      <unix:suid datatype="boolean">false</unix:suid>
      <unix:sgid datatype="boolean">false</unix:sgid>
      <unix:sticky datatype="boolean">false</unix:sticky>
      <unix:gwrite datatype="boolean">false</unix:gwrite>
      <unix:owrite datatype="boolean">false</unix:owrite>
  </unix:file_state>
  

  <unix:file_state id="exclude_symlinks_directory_permissions_etc_sysctld" version="1">
    <unix:type operation="equals">symbolic link</unix:type>
  </unix:file_state>
</def-group>