<def-group><definition class="inventory" id="service_disabled_iptables" version="1">
    <metadata>
        <title>The iptables is disabled on the system</title>
            <affected family="unix">
                <platform>multi_platform_all</platform>
            </affected>
        <description>The iptables service should be disabled.</description>
    </metadata>
    <criteria comment="package iptables removed or service iptables is not configured to start" operator="OR">
      <criterion comment="iptables removed" test_ref="service_disabled_iptablestest_service_iptables_package_iptables_removed" />
      
  
      <criteria operator="AND" comment="service iptables is not configured to start">
        <criterion test_ref="test_service_not_running_service_disabled_iptables_iptables"
          comment="iptables is not running"/>
        <criterion test_ref="test_service_loadstate_is_masked_service_disabled_iptables_iptables"
          comment="Property LoadState of service iptables is masked"/>
      </criteria>

    </criteria>
  </definition>
  
  
      <linux:systemdunitproperty_test id="test_service_not_running_service_disabled_iptables_iptables"
        check="all" check_existence="any_exist"
        comment="Test that the iptables service is not running" version="1">
        <linux:object object_ref="obj_service_not_running_service_disabled_iptables_iptables"/>
        <linux:state state_ref="state_service_not_running_service_disabled_iptables_iptables"/>
      </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object id="obj_service_not_running_service_disabled_iptables_iptables"
      comment="Retrieve the ActiveState property of iptables" version="1">
      <linux:unit operation="pattern match">^iptables\.(service|socket)$</linux:unit>
      <linux:property>ActiveState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state id="state_service_not_running_service_disabled_iptables_iptables"
      version="1" comment="iptables is not running">
      <linux:value operation="pattern match">inactive|failed</linux:value>
    </linux:systemdunitproperty_state>

    <linux:systemdunitproperty_test check="all" check_existence="any_exist"
      id="test_service_loadstate_is_masked_service_disabled_iptables_iptables"
      comment="Test that the property LoadState from the service iptables is masked"
      version="1">
      <linux:object object_ref="obj_service_loadstate_is_masked_service_disabled_iptables_iptables"/>
      <linux:state state_ref="state_service_loadstate_is_masked_service_disabled_iptables_iptables"/>
    </linux:systemdunitproperty_test>

    <linux:systemdunitproperty_object  comment="Retrieve the LoadState property of iptables"
      version="1" id="obj_service_loadstate_is_masked_service_disabled_iptables_iptables">
      <linux:unit operation="pattern match">^iptables\.(service|socket)$</linux:unit>
      <linux:property>LoadState</linux:property>
    </linux:systemdunitproperty_object>

    <linux:systemdunitproperty_state comment="LoadState is set to masked"
      id="state_service_loadstate_is_masked_service_disabled_iptables_iptables"
      version="1">
      <linux:value>masked</linux:value>
    </linux:systemdunitproperty_state>

  
  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="service_disabled_iptablestest_service_iptables_package_iptables_removed" version="1"
  comment="package iptables is removed">
    <linux:object object_ref="obj_service_disabled_iptablestest_service_iptables_package_iptables_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_service_disabled_iptablestest_service_iptables_package_iptables_removed" version="1">
    <linux:name>iptables</linux:name>
  </linux:rpminfo_object>


</def-group>